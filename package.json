{
  "name": "Basic-Node-Build",
  "version": "0.0.1",
  "description": "A starter for node projects using NPM for build process",
  "dependencies": {},
  "devDependencies": {
    "clean-css": "^3.4.19",
    "http-server": "^0.9.0",
    "node-sass": "^3.10.0",
    "uglify-js": "^2.7.3",
    "watch": "^0.19.2",
    "parallelshell": "latest",
    "live-reload": "latest"

  },
  "scripts": {
    "info": "echo 'npm as a build tool'",
    "livereload": "live-reload --port 8080 ./",
    "minify:js": "echo '=> minify:js' -o dist/js/main.min.js",
    "minify:css": "echo '=> minify:css' && cleancss /css/main.min.css -o dist/css/main.min.css",
    "build": "echo '=> building' && npm run minify:js -s && npm run minify:css -s",
    "build:sass": "node-sass sass/style.scss css/main.min.css --output-style compressed",
    "watch:sass": "npm run build:sass -- -w",
    "start": "parallelshell 'http-server ./' 'npm run livereload' 'npm run build:sass -- -w'"
  },
  "author": "Experiment",
  "license": "Open"
}
